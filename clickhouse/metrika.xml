<yandex>
    <clickhouse_storage_configuration>
        <disks>
            <hdfs1>
                <type>hdfs</type>
                <endpoint>hdfs://namenode.hadoop.docker:8020/data/clickhouse/%SHARD%/</endpoint>
            </hdfs1>
            <backup>
                <type>hdfs</type>
                <endpoint>hdfs://namenode.hadoop.docker:8020/data/clickhouse/backup/%SHARD%/</endpoint>
            </backup>
        </disks>
        <policies>
            <default>
                <volumes>
                    <default>
                        <disk>default</disk>
                    </default>
                </volumes>
            </default>
            <hdfs_only>
                <volumes>
                    <hdfs>
                        <disk>hdfs1</disk>
                    </hdfs>
                </volumes>
            </hdfs_only>
            <hdfs_too>
                <move_factor>0</move_factor>
                <volumes>
                    <default>
                        <disk>default</disk>
                    </default>
                    <hdfs>
                        <disk>hdfs1</disk>
                        <prefer_not_to_merge>true</prefer_not_to_merge>
                    </hdfs>
                </volumes>
            </hdfs_too>
        </policies>
    </clickhouse_storage_configuration>
    <clickhouse_backups>
        <allowed_disk>backup</allowed_disk>
        <allowed_path>/</allowed_path>
    </clickhouse_backups>

    <clickhouse_remote_servers> <!-- name of substitution-->
        <events>                <!-- name of cluster (arbitary) to be specified in parameter of Distributed table -->
            <shard>
                <internal_replication>true</internal_replication>
                <replica><host>shard1-a</host><port>9000</port></replica>
                <replica><host>shard1-b</host><port>9000</port></replica>
            </shard>
            <shard>
                <internal_replication>true</internal_replication>
                <replica><host>shard2-a</host><port>9000</port></replica>
                <replica><host>shard2-b</host><port>9000</port></replica>
            </shard>
        </events>
    </clickhouse_remote_servers>

    <zookeeper_servers>
        <node index="1">
            <host>zk</host>
            <port>2181</port>
        </node>
    </zookeeper_servers>

    <macros>
        <host>%HOST%</host>
        <shard>%SHARD%</shard>
    </macros>
</yandex>

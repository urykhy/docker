
once started:
    echo "docker:docker@`host -t a coordinator.fdb.docker | cut -d\  -f 4`:4500" > fdb.cluster

create database:
    fdbcli --exec "configure new single memory ; status" --timeout 10

show status:
    fdbcli --exec "status"

show roles:
    fdbcli --exec "status json" | jq -r '.cluster.processes[] | ["machine_id", .machine_id ],["address:", .address ],["roles:", .roles[].role] | @tsv' | column -t

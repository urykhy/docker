docker volume create --name=influxdb
docker volume create --name=graphite
docker volume create --name=grafana
docker volume create --name=grafana_log
docker volume create --name=grafana_etc
docker network create grafana

prepare grafana volumes:
docker run --rm -ti --user root --entrypoint bash -v grafana:/var/lib/grafana -v grafana_log:/var/log/grafana -v grafana_etc:/etc/grafana grafana/grafana
# in the container you just started:
chown -R root:root /etc/grafana && \
  chmod -R a+r /etc/grafana && \
  chown -R grafana:grafana /var/lib/grafana && \
  chown -R grafana:grafana /usr/share/grafana

grafana sources:
graphite: http://graphite.grafana.docker:80
influx:   http://influxdb.grafana.docker:8086, database: telegraf
es (from other compose): http://elasticsearch.elk.docker:9200, index: logstash-*, message field name: message

web interface:
http://grafana.grafana.docker:3000 as admin:admin
http://influxdb.grafana.docker:8083/
http://graphite.grafana.docker:80

cleanup old data:
cd volume (/u01/docker/volumes/graphite/_data/telegraf)
    find . -type f -mtime +7 -name \*.wsp -delete;
    find . -depth -type d -empty -delete

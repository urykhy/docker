HELM
    kubectl apply -f helm.yaml
    kubectl apply -f admin.yaml
    helm init --service-account helm
    kubectl get pods --namespace kube-system
    helm version
    helm ls
    kubectl logs -n kube-system tiller-deploy-7cb5fddf48-qv2v7
    helm repo update

PROMETHEUS
    helm install stable/prometheus-operator --namespace prometheus
    PODNAME=$(kubectl get pods --namespace prometheus -l "app=grafana" -o jsonpath="{.items[0].metadata.name}")
    kubectl port-forward -n prometheus $PODNAME 3000
    > open http://127.0.0.1:3000 in browser

    # get login and password
    kubectl get secret --namespace prometheus washed-marmot-grafana -o jsonpath="{.data.admin-user}" | base64 -d
    kubectl get secret --namespace prometheus washed-marmot-grafana -o jsonpath="{.data.admin-password}" | base64 -d
    admin:prom-operator

    # prometheus
    PODNAME=$(kubectl get pods --namespace prometheus -l "app=prometheus" -o jsonpath="{.items[0].metadata.name}")
    kubectl port-forward -n prometheus $PODNAME 9090

